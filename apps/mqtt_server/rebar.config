{src_dirs, ["src"]}.

{deps, [
    {cowboy,      {git, "https://github.com/ninenines/cowboy.git", {tag, "2.9.0"}}},
    {mqtt_common, {git, "https://github.com/alekras/erl.mqtt.common.git", {branch, "version-2.1.0"}}}
  ]
}.

{erl_opts, [
  no_debug_info, 
  {parse_transform, lager_transform}
]}.

{overrides, [{override, mqtt_common, [{erl_opts, [no_debug_info,{parse_transform, lager_transform},{d, 'TEST'}]}]}]}.

{eunit_compile_opts, [{src_dirs, ["src"]}]}.
{eunit_opts, [verbose]}.

{cover_enabled, false}.

{clean_files, ["doc/*"]}.

{edoc_opts, [
  {def, [{version, "1.1.0"}]},
  {private, false},
  {source_path, ["src"]},
  {title, "MQTT server for Erlang"}, 
  {overview, "src/overview.edoc"},
  {sort_functions, false}, 
  {stylesheet_file, "priv/my.css"},
  {preprocess, true},
  {includes, ["include"]}
]}.
