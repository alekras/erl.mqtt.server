{src_dirs, ["src"]}.

{deps, [
    {cowboy,      {git, "https://github.com/ninenines/cowboy.git", {tag, "2.6.3"}}},
    {mqtt_common, {git, "https://github.com/alekras/erl.mqtt.common.git", {branch, "mqtt_v5"}}}
%%    {lager,       {git, "https://github.com/basho/lager.git",        {branch, "master"}}}
%%    {ranch,       {git, "https://github.com/ninenines/ranch.git",    {branch, "master"}}}
  ]
}.

{erl_opts, [
  no_debug_info, 
  {parse_transform, lager_transform}
]}.

{overrides, [{override, mqtt_common, [{erl_opts, [no_debug_info,{parse_transform, lager_transform},{d, 'TEST'}]}]}]}.

{eunit_compile_opts, [{src_dirs, ["src"]}]}.
{eunit_opts, [verbose]}.

{cover_enabled, false}.

{clean_files, ["doc/*"]}.

{edoc_opts, [
  {def, [{version, "1.0.2"}]},
  {private, false},
  {source_path, ["src"]},
  {title, "MQTT server for Erlang"}, 
  {overview, "src/overview.edoc"},
  {sort_functions, false}, 
  {stylesheet_file, "priv/my.css"},
  {preprocess, true},
  {includes, ["include"]}
]}.

{relx, [
  {release, {mqtt_server, "1.0.3" }, [mqtt_server, sasl] },
  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},
  {dev_mode, false},
  {include_erts, true},
  {extended_start_script, true}
]}.

{profiles, [
  {prod, [
    {relx, [
      {dev_mode, false},
      {include_erts, true},
      {include_src, false}
    ]}
  ]},

  {test, [
    {eunit_compile_opts, [{src_dirs, ["src"]}]},
    {eunit_tests, [{dir, "test"},{dir, "test/v5"}]},
    {eunit_opts, [verbose]},
    {overrides, [{override, mqtt_common, [{erl_opts, [no_debug_info,{parse_transform, lager_transform},{d, 'TEST'}]}]}]},
    {deps, [
      {mqtt_client, {git, "https://github.com/alekras/mqtt_client.git", {branch, "mqtt_v5"}}}
    ]}
	]}
]}.